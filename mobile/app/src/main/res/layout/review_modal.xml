<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.ReviewModalFragment"
    android:id="@+id/review_modal_backdrop"
    android:background="#20000000">

    <LinearLayout
        android:id="@+id/review_modal_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_modal"
        android:orientation="vertical"
        android:padding="@dimen/padding_card">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave a review"
            android:layout_marginBottom="10dp"
            style="@style/HeaderTitle"/>

        <LinearLayout
            android:id="@+id/review_modal_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">



        </LinearLayout>

        <EditText
            android:id="@+id/review_modal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="4"
            android:scrollbars="vertical"
            android:hint="Write your review"
            android:background="@drawable/bg_input"
            android:gravity="top"
            style="@style/InputField"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/review_modal_cancel"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginRight="10dp"
                style="@style/BtnOutlined"/>

            <Button
                android:id="@+id/review_modal_send"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Send"
                style="@style/BtnFilled"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>