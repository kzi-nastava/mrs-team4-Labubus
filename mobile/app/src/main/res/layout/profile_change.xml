<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_profile_change">

    <TextView
        android:id="@+id/txt_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/text_regular"
        android:text="User ID:"/>

    <!-- only new avatar will be shown, old avatar will be hidden -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_new_avatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/img_default_avatar"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/text_small"
        android:text="Old:"/>

    <TextView
        android:id="@+id/txt_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/text_small"
        android:text="New:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            style="@style/BtnFilled"
            android:textAllCaps="false"
            android:text="Accept"/>

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            style="@style/BtnOutlined"
            android:textAllCaps="false"
            android:text="Reject"/>
    </LinearLayout>

</LinearLayout>
