<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ride_list_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_modal"
            android:paddingHorizontal="30dp"
            android:paddingBottom="30dp"
            android:paddingTop="70dp"
            >

            <!-- DATE FILTER -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/date_filter_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date created"
                android:gravity="left|center_vertical"
                app:icon="@drawable/ic_calendar"
                app:iconGravity="end"
                style="@style/InputField"
                app:backgroundTint="@null"
                android:textColor="@color/text_primary"
                app:iconTint="@color/text_primary"
                android:onClick="showDatePicker"
                />

            <!-- USER FILTER -->
            <EditText
                android:id="@+id/user_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Driver"
                android:padding="16dp"
                style="@style/InputField"/>

            <ListView
                android:id="@+id/filtering_options"
                style="@style/InputField"
                android:visibility="gone"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </ListView>

            <!-- SORT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sort_field"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Sort by"
                    android:gravity="left|center_vertical"
                    app:icon="@drawable/ic_arrow_down"
                    app:iconGravity="end"
                    style="@style/InputField"
                    app:backgroundTint="@null"
                    android:textColor="@color/text_primary"
                    app:iconTint="@color/text_primary"
                    />

                <ImageView
                    android:id="@+id/sort_direction"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_sort_direction"
                    />
            </LinearLayout>

            <ListView
                android:id="@+id/sorting_options"
                style="@style/InputField"
                android:visibility="gone"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="53dp"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ride_list_cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="30dp"
            android:paddingBottom="12dp"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <!-- TOP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        style="@style/HeaderRow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="16dp"
            style="@style/HeaderBackIcon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/ride_history"
            android:includeFontPadding="false"
            style="@style/HeaderTitle"/>
    </LinearLayout>

</FrameLayout>