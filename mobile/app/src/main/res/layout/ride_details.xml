<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_bottom_modal"
        android:padding="35dp"
        android:id="@+id/ride_details_bottom_drawer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clock_primary"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/ride_details_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"
                    android:text="25 Dec 2025 00:00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dots"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text=""
                    android:background="#D5D5D5"
                    android:layout_marginRight="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clock_primary"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/ride_details_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"
                    android:text="25 Dec 2025 00:00"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ride_details_waypoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ride_details_markers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ride_details_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@color/text_primary"
                    android:text="3.4km"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:includeFontPadding="false"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ride_details_passengers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/text_primary"
                    android:text="Passengers"
                    android:layout_marginTop="15dp"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ride_details_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/text_primary"
                    android:text="Driver"
                    android:layout_marginTop="15dp"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ride_details_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_regular"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/text_primary"
                    android:text="Vehicle"
                    android:layout_marginTop="15dp"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ride_details_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Button
                android:id="@+id/ride_details_reorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/BtnFilled"
                android:padding="6dp"
                android:text="Reorder ride"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>