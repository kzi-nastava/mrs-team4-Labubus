<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.main.ProfileCardFragment"
    android:background="@drawable/bg_input"
    android:padding="@dimen/padding_regular"
    android:orientation="horizontal"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/profile_card_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_avatar"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/profile_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/text_primary"/>

        <TextView
            android:id="@+id/profile_card_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/text_small"
            android:textColor="@color/neutral_dark_gray"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/profile_card_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>