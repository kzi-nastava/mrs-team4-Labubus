<resources>
    <style name="BtnFilled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_filled</item>

        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>

        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:gravity">center</item>

        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">0dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="BtnOutlined" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_outlined</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>

        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:gravity">center</item>

        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">0dp</item>
    </style>

    <style name="Avatar">
        <item name="android:background">@drawable/bg_avatar</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="InputBoxLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/neutral_dark_gray</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>

        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="InputBoxEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="IconButtonWhite" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/icon_button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">14dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/icon_regular</item>
        <item name="android:layout_height">@dimen/icon_regular</item>
    </style>

    <style name="IconButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/icon_button_error</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">14dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/icon_regular</item>
        <item name="android:layout_height">@dimen/icon_regular</item>
    </style>
  
    <style name="InputBoxLabel">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>



</resources>

