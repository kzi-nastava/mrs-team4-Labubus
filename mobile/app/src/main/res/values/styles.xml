<resources>
    <style name="BtnFilled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_filled</item>

        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>

        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:gravity">center</item>

        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">0dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="BtnOutlined" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_outlined</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>

        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:gravity">center</item>

        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">0dp</item>
    </style>

    <style name="Avatar">
        <item name="android:background">@drawable/bg_avatar</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <!-- INPUT BOX STYLES -->

    <style name="InputBoxLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>

        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="InputBoxEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>








    <!-- ICON BUTTON STYLES -->

    <style name="IconButtonWhite" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/icon_button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">14dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/icon_regular</item>
        <item name="android:layout_height">@dimen/icon_regular</item>
    </style>





    <style name="IconButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/icon_button_error</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">14dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/icon_regular</item>
        <item name="android:layout_height">@dimen/icon_regular</item>
    </style>





    <!-- SECTION TITLE STYLE -->

    <style name="SectionTitle">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/neutral_dark_gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>




    <!-- HEADER ROW STYLES -->

    <style name="HeaderRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="HeaderBackIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <!-- DRAWER STYLE -->
    <style name="DrawerTextAppearance">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>



</resources>

