<resources>
    <style name="BtnFilled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_filled</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/surface</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BtnOutlined" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_outlined</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="IconButtonWhite" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/icon_button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">14dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/icon_regular</item>
        <item name="android:layout_height">@dimen/icon_regular</item>
    </style>

    <style name="IconButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/icon_button_error</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">14dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">@dimen/icon_regular</item>
        <item name="android:layout_height">@dimen/icon_regular</item>
    </style>

</resources>

